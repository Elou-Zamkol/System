<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyProgekt.MainWindow"
        Title="Погода" Height="1000" Width="2000">
    
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="CityTextBox" Width="200" Margin="0 0 10 0"/>
            <Button Content="Получить погоду" Click="GetWeatherButton_Click"/>
        </StackPanel>
        <TextBlock x:Name="WeatherTextBlock" FontSize="16" TextWrapping="Wrap"/>
        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" FontSize="14" TextWrapping="Wrap" Margin="0 10 0 0"/>
    </StackPanel>
    
    
</Window>
